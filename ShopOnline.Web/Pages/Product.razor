@page "/"
@using ShopOnline.Models;
@inherits ProductBase

@if (Products == null)
{
    <h3>Loading products...</h3>
}
else
{
    <h3 class="mb-5">Products</h3>
    var productCount = Products.Count();

    @if (productCount > 0)
    {
        @foreach (var item in GetGroupedProductByCategpry())
        {
            <h4>@GetCategoryName(item)</h4>
            <div class="row mt-3">
                <DisplayProducts ProductList="@item.Take(4)"></DisplayProducts>
            </div>
            <hr class="mb-3"/>
        }
    }
}
